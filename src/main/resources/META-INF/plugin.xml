<!-- Plugin Configuration File. Read more:
https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <id>dev.alerix.plugins.i18n</id>
    <name>I18next Inline Hints</name>
    <vendor>Alerix</vendor>

    <depends>com.intellij.modules.platform</depends>
    <depends>JavaScript</depends>

    <extensions defaultExtensionNs="com.intellij">
        <applicationConfigurable
            parentId="tools"
            displayName="i18next Inline Hints"
            id="com.alerix.i18n.I18nSettingsConfigurable"
            instance="com.alerix.i18n.I18nSettingsConfigurable" />
        <lang.documentationProvider
            language="TypeScript"
            implementationClass="com.alerix.i18n.I18nDocumentationProvider" />
        <lang.documentationProvider
            language="TypeScript JSX"
            implementationClass="com.alerix.i18n.I18nDocumentationProvider" />
        <lang.documentationProvider
            language="JavaScript"
            implementationClass="com.alerix.i18n.I18nDocumentationProvider" />
        <lang.documentationProvider
            language="JSX Harmony"
            implementationClass="com.alerix.i18n.I18nDocumentationProvider" />
        <codeInsight.inlayProvider
            language="JavaScript"
            implementationClass="com.alerix.i18n.I18nInlayHintsProvider" />
    </extensions>
</idea-plugin>